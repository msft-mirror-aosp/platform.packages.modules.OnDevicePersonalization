package {
    default_visibility: [":__subpackages__"],
    default_applicable_licenses: ["Android-Apache-2.0"],
}

java_defaults {
    name: "federatedcompute-java-defaults",
    lint: {
        error_checks: ["NewApi"],
        strict_updatability_linting: true,
    },
    min_sdk_version: "Tiramisu ",
}

java_genrule {
    name: "federatedcompute-fbs",
    tools: [
        "flatc",
        "soong_zip",
    ],
    host_supported: true,
    srcs: ["src/**/*.fbs"],
    out: ["federatedcompute-fbs.srcjar"],
    cmd: "$(location flatc) -o $(genDir) --java $(in) " +
        "&& $(location soong_zip) -o $(out) -C $(genDir) -D $(genDir)",
    visibility: [
      "//packages/modules/OnDevicePersonalization:__subpackages__"
    ],
}

filegroup {
    name: "federatedcompute-sources",
    srcs: [
        "src/**/*.java",
        "src/**/*.aidl",
    ],
    path: "src",
    visibility: [
      "//packages/modules/OnDevicePersonalization:__subpackages__"
    ],
}

cc_library_shared {
    name: "libfcp_cpp_dep_jni",
    srcs: [
        "jni/cpp/*.cc",
        // Add tensorflow java API jni source files
        ":tensorflowlite_jni_src",
    ],
    include_dirs: [
        "external/flatbuffers/include",
        "external/tensorflow",
    ],
    version_script: "jni/jni.lds",
    whole_static_libs: [
        "libfederatedcompute",
    ],
    static_libs:[
        "federated-compute-cc-proto-lite",
        "libprotobuf-cpp-lite-ndk",
    ],
    header_libs: [
        "libnativehelper_header_only",
        "libeigen",
        "jni_headers",
    ],
    shared_libs: [
        "liblog",
        "libcrypto",
    ],
    stl: "libc++_static",
    apex_available: ["com.android.ondevicepersonalization"],
    sdk_version: "current",
    min_sdk_version: "Tiramisu",
    visibility: [
        "//packages/modules/OnDevicePersonalization:__subpackages__",
    ],
    cflags: [
        "-Wno-unused-parameter",
    ],
}
